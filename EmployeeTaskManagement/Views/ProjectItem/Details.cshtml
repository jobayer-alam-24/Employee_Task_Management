@model EmployeeTaskManagement.Models.ProjectItem

@{
    ViewData["Title"] = "Details";
}
<partial name="~/Views/Shared/Common/_BreadCrumbPartial.cshtml" model='("Project Item", "Home", "Project Item")'></partial>

<div class="container my-4">
    <!-- Project Item Details -->
    <div class="card">
        <div class="card-header">
            <h4>Project Item Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.AssignDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.AssignDate)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.WorkingHours)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.WorkingHours)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Project)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.Name)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm">Edit</a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>
