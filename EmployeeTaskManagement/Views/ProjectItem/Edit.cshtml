@model EmployeeTaskManagement.Models.ProjectItem

@{
    ViewData["Title"] = "Edit";
}
}
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.css" rel="stylesheet" />
}
<partial name="~/Views/Shared/Common/_BreadCrumbPartial.cshtml" model='("Project Item", "Home", "Project Item")'></partial>

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <div class="card-header text-center">
                <h4>Edit Project Item</h4>
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label">Select Project</label>
                    <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId">
                        <option value="">--Select Project--</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Item Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea id="summernote" asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AssignDate" class="control-label">Assign Date</label>
                    <input asp-for="AssignDate" class="form-control" type="date" />
                    <span asp-validation-for="AssignDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WorkingHours" class="control-label">Working Hours</label>
                    <input asp-for="WorkingHours" class="form-control" />
                    <span asp-validation-for="WorkingHours" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
