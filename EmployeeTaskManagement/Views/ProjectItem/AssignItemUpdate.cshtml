@using EmployeeTaskManagement.ViewModels
@model UpdateTaskViewModel

@{
    ViewData["Title"] = "Update task";
}


<partial name="~/Views/Shared/Common/_BreadCrumbPartial.cshtml" model='("Project Item", "Home", "Project Item")'></partial>

<h4>Update your task -> @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignItemUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" value="@ViewBag.ProjectId" />
        
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Write your note....."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ProjectItemAssignStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Project" asp-route-id="@ViewBag.ProjectId">Back to List</a>
</div>