@model EmployeeTaskManagement.Models.RuleViolation

@{
    ViewData["Title"] = "Violation Details";
}
<partial name="~/Views/Shared/Common/_BreadCrumbPartial.cshtml" model='("Rule Violation", "Home", "Rule Violation")'></partial>

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Violation Details</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Incident Date</dt>
                <dd class="col-sm-9">@Model.IncidentDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Point</dt>
                <dd class="col-sm-9">@Model.Point</dd>

                <dt class="col-sm-3">Note</dt>
                <dd class="col-sm-9">@Model.Note</dd>

                <dt class="col-sm-3">Member Note</dt>
                <dd class="col-sm-9">@Model.MemberNote</dd>

                <dt class="col-sm-3">Reply Status</dt>
                <dd class="col-sm-9">@Model.ReplyStatus</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Member</dt>
                <dd class="col-sm-9">@Model.Member?.Name (@Model.Member?.Id)</dd>

                <dt class="col-sm-3">Rule</dt>
                <dd class="col-sm-9">@Model.Rule?.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
